html
  height: 100%
body, main
  margin: 0
  width: 100%
  height: 100%
main
  background: linear-gradient(hsl(273, 75%, 66%),hsl(240, 73%, 65%))
  overflow-y: scroll;
  position: relative;
#box
  display: none
  @media (min-width: 1024px)
    container-width = 920px
    display: block;
    position: absolute;
    top: 400px;
    left: "calc(calc(-%s + 100%)/2 - 90px)" % container-width;
    z-index: 2
div.container
  container-width = 327px
  width: container-width
  margin: auto;
  margin-top: 148px;
  margin-bottom: 85px;
  font-family: 'Kumbh Sans', sans-serif
  font-size: 12px
  color: hsl(238, 29%, 16%);
  background: white;
  border-radius: 25px
  display: flex;
  flex-direction: column;
  position: relative;
  @media (min-width: 1024px)
    container-width = 920px
    width: container-width
    flex-direction: row;
    margin: 130px auto;
    overflow: hidden;

  #woman
    width: 266px
    height: 196px
    position: absolute;
    top: -107px
    left: "calc(calc(-%s + 100%)/2 + 17px)" % container-width
    @media (min-width: 1024px)
      width: 472px
      height:359px
      top: 130px
      left: -80px
      z-index: 1
  #shadow
    width: 240px
    height: 104px
    margin: auto;
    margin-top:0;
    @media (min-width: 1024px)
      width: 510px
      height: 555px
      position: relative;
      top: -250px
      left: -570px
  div.FAQ
    display: flex;
    flex-direction: column;
    margin-bottom: 48px;
    margin-top: 17px;
    @media (min-width: 1024px)
      width:350px
      margin-bottom: 85px;
      margin-top: 62px;
      margin-right: 60px;

    h1
      margin: auto
      font-size: 3em;
      margin-bottom: 21px;
      @media (min-width: 1024px)
        margin-left: 15px
  details
    margin: auto 15px;
    border-bottom: 1px solid
    border-color: hsl(240, 5%, 91%)
    padding: 16px 0
    summary
      list-style: none
      display: inline-block;
      width: 100%
    summary:after
      content: url("./images/icon-arrow-down.svg")
      display: inline-block
      float: right;

  details[open]
    summary
      font-weight: bold;
    summary:after
      transform: rotate(180deg)
